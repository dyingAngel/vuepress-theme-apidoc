.theme-container.api-document
  .admonition
    line-height 24px
    border 1px solid #e3e8ee
    border-radius 4px
    background-color #f7fafc
    padding 12px 12px 12px 12px

    &:not(:first-child) 
      margin-top 20px
    &:not(:last-child) 
      margin-bottom 10px

    &.note
      float right
      width 262px
      padding 12px 16px
      margin 20px 0 20px 20px
      position relative
      z-index 2
      -webkit-box-shadow 0 0 0 1px rgba(0,0,0,.07)
      box-shadow 0 0 0 1px rgba(0,0,0,.07)
      border-radius 4px
      &:first-child 
        margin-top 0

    &:before
      font-family: 'Material Icons';
      font-weight: normal;
      font-style: normal;
      font-size: 20px;
      line-height: 1;
      letter-spacing: normal;
      text-transform: none;
      display: block;
      white-space: nowrap;
      word-wrap: normal;
      direction: ltr;
      -webkit-font-feature-settings: 'liga';
      -webkit-font-smoothing: antialiased;
      text-rendering: optimizeLegibility;
      -moz-osx-font-smoothing: grayscale;
      font-feature-settings: 'liga';
      float: left;
      width: 20px;
      height: 20px;
      margin: 3px 0 0 0;
      content ""

    &.checked:before
      content "check_circle"

    &.info:before
      content "info"
    
    &.warning:before
      content "warning"
    
    &.error:before
      content "error"

    &.green:before
      color: #00CA7C

    &.red:before
      color: #FE4D6D

    p
      margin-block-start 0px
      margin-block-end 0px
      padding-left 30px
